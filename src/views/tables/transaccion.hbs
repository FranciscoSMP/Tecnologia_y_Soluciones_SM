{{#if success_msg}}
<div id="success-alert" class="alert-overlay fade-out">
  <div class="alert alert-success custom-alert text-center">
    {{success_msg}}
  </div>
</div>
{{/if}}

{{#ifCond user.Id_Rol '==' 1}}
<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-center flex-grow-1">Lista de Transacciones</h2>
    <a href="/transaccion/add" class="btn btn-success btn-sm ms-3">
      <i class="bi bi-plus-circle"></i> Nueva Transacción
    </a>
  </div>

  {{#if transacciones.length}}
  <div class="table-responsive shadow-sm">
    <table class="table custom-table table-striped align-middle text-center">
      <thead class="table-success">
        <tr>
          <th>Tipo</th>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Usuario</th>
          <th>Fecha</th>
          <th>Motivo</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each transacciones}}
        <tr>
          <td>
            {{#ifCond this.tipo_transaccion '==' 'Entrada'}}
            <span class="badge bg-success">Entrada</span>
            {{else ifCond this.tipo_transaccion '==' 'Salida'}}
            <span class="badge bg-danger">Salida</span>
            {{else ifCond this.tipo_transaccion '==' 'Ajuste'}}
            <span class="badge bg-warning text-dark">Ajuste</span>
            {{else ifCond this.tipo_transaccion '==' 'Devolución'}}
            <span class="badge bg-info text-dark">Devolución</span>
            {{else}}
            <span class="badge bg-secondary">{{this.tipo_transaccion}}</span>
            {{/ifCond}}
          </td>
          <td>{{this.nombre}}</td>
          <td>{{this.cantidad}}</td>
          <td>{{this.nombre_usuario}}</td>
          <td>{{this.fecha}}</td>
          <td><span class="text-ellipsis" title="{{this.motivo}}">{{this.motivo}}</span></td>
          <td>
            <a href="/transaccion/ver/{{this.id_transaccion}}" class="btn btn-sm btn-info">
              <i class="bi bi-eye"></i> Ver Detalle
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <div class="alert alert-warning text-center shadow-sm">
    No hay transacciones registradas en este momento.
  </div>
  {{/if}}

  <!-- 🔙 Botón volver -->
  <a href="/dashboard" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left-circle"></i> Volver al Panel
  </a>
</div>

