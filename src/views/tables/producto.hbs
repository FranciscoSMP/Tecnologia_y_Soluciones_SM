{{#if success_msg}}
<div id="success-alert" class="alert-overlay fade-out">
  <div class="alert alert-success custom-alert text-center">
    {{success_msg}}
  </div>
</div>
{{/if}}

{{#ifCond user.Id_Rol '==' 1}}
<div class="container my-5">

  <!-- TÃ­tulo y botÃ³n de acciÃ³n -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-center flex-grow-1">Lista de Productos</h2>
    <a href="/producto/agregar" class="btn btn-success btn-sm ms-3">
      <i class="bi bi-plus-circle"></i> Nuevo Producto
    </a>
  </div>

  {{#if producto.length}}
  <div class="table-responsive shadow-sm">
    <table class="table custom-table table-striped align-middle text-center">
      <thead class="table-success">
        <tr>
          <th>SKU</th>
          <th>Nombre</th>
          <th>DescripciÃ³n</th>
          <th>Precio Unitario</th>
          <th>Stock Actual</th>
          <th>Umbral MÃ­nimo</th>
          <th>CategorÃ­a</th>
          <th>Proveedor</th>
          <th>Estado</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each producto}}
        <tr class="
          {{#ifCond this.estado_inventario '==' 'critico'}}table-danger{{/ifCond}}
          {{#ifCond this.estado_inventario '==' 'bajo'}}table-warning{{/ifCond}}
        ">
          <td>{{this.sku}}</td>
          <td>{{this.nombre}}</td>
          <td>{{this.descripcion}}</td>
          <td>Q {{this.precio_unitario}}</td>
          <td>{{this.stock_actual}}</td>
          <td>{{this.umbral_minimo}}</td>
          <td>{{this.nombre_categoria}}</td>
          <td>{{this.nombre_comercial}}</td>
          <td>
            {{#ifCond this.estado_inventario '==' 'critico'}}
              <span class="badge bg-danger">Reabastecer</span>
            {{else ifCond this.estado_inventario '==' 'bajo'}}
              <span class="badge bg-warning text-dark">Bajo</span>
            {{else}}
              <span class="badge bg-success">Ã“ptimo</span>
            {{/ifCond}}
          </td>
          <td>
            <a href="/producto/editar/{{this.id_producto}}" class="btn btn-sm btn-warning me-2">
              <i class="bi bi-pencil-square"></i> Editar
            </a>
            <button type="button" 
                    class="btn btn-sm btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#confirmDeleteModal"
                    onclick="setDeleteModal('el producto', '{{this.nombre}}', 'producto', '{{this.id_producto}}')">
              <i class="bi bi-trash"></i> Eliminar
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <div class="alert alert-warning text-center shadow-sm">
    No hay productos disponibles en este momento.
  </div>
  {{/if}}

  <!-- BotÃ³n volver -->
  <a href="/dashboard" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left-circle"></i> Volver al Panel
  </a>
</div>

