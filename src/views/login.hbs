<section class="d-flex justify-content-center align-items-center" style="min-height: 90vh; background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
  <div class="container">

    <div class="row justify-content-center align-items-center">
      <div class="col-lg-6 mb-4 mb-lg-0 d-none d-lg-block">
        <img src="/img/login-bg.png" alt="Imagen de acceso" class="img-fluid rounded-4 shadow" style="object-fit: cover; height: 450px; width: 100%;">
      </div>
      
      <div class="col-lg-5 col-md-8">
        <div class="card p-4 shadow-lg border-0 rounded-4" style="backdrop-filter: blur(15px); background: rgba(255,255,255,0.9);">
          <div class="text-center mb-4">
            <i class="fas fa-user-lock fa-3x text-secondary mb-3"></i>
            <h3 class="fw-bold mb-1">Inicio de Sesión</h3>
            <p class="text-muted small">Acceda a su cuenta para continuar</p>
          </div>

          <form method="POST" action="/login">
            {{#if error_msg}}
              <div id="success-alert" class="alert alert-danger fade-out">{{error_msg}}</div>
            {{else if error}}
              <div class="alert alert-danger">{{error}}</div>
            {{/if}}

            <div class="mb-3 position-relative">
              <label for="username" class="form-label">Usuario</label>
              <div class="input-group">
                <span class="input-group-text bg-white"><i class="fas fa-user"></i></span>
                <input type="text" id="username" name="username" class="form-control" placeholder="Ingrese su usuario" required>
              </div>
            </div>

            <div class="mb-4 position-relative">
              <label for="password" class="form-label">Contraseña</label>
              <div class="input-group">
                <span class="input-group-text bg-white"><i class="fas fa-lock"></i></span>
                <input type="password" id="password" name="password" class="form-control" placeholder="Ingrese su contraseña" required>
              </div>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-dark w-100 py-2 fw-semibold">Ingresar</button>
              <a href="/" class="btn btn-outline-secondary w-100 py-2 fw-semibold">
                <i class="fas fa-arrow-left me-1"></i> Regresar al inicio
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
