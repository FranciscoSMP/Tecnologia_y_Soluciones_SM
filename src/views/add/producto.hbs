{{#ifCond user.Id_Rol '==' 1}}
<h2 class="text-center my-4">Añadir Producto</h2>
<form action="/producto/guardar" method="POST" class="container form-General">
    <div class="form-group mb-3">
        <p><font color="red">*</font> Son campos obligatorios</p>
        <label for="nombre" class="form-label" >Nombre<font color="red">*</font></label>
        <input type="text" name="nombre" id="nombre" class="form-control" required>
        <label for="descripcion" class="form-label" >Descripción</label>
        <input type="text" name="descripcion" id="descripcion" class="form-control">
        <label for="precio_unitario" class="form-label" >Precio Unitario</label>
        <input type="text" name="precio_unitario" id="precio_unitario" class="form-control" required>
        <label for="stock_actual" class="form-label" >Stock Actual</label>
        <input type="text" name="stock_actual" id="stock_actual" class="form-control" required>
        <label for="umbral_minimo" class="form-label" >Umbral Mínimo</label>
        <input type="text" name="umbral_minimo" id="umbral_minimo" class="form-control" required>
        <div class="col-md-4 mb-3">
            <label for="id_categoria">Categoría<font color="red">*</font></label>
            <select name="id_categoria" id="id_categoria" class="form-control">
                <option value="" disabled selected>Seleccione un Campo</option>
                {{#each categoria}}
                <option value="{{this.id_categoria}}">{{this.nombre_categoria}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label for="id_proveedor">Proveedor<font color="red">*</font></label>
            <select name="id_proveedor" id="id_proveedor" class="form-control">
                <option value="" disabled selected>Seleccione un Campo</option>
                {{#each proveedor}}
                <option value="{{this.id_proveedor}}">{{this.nombre_comercial}}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="text-center">
    <button type="submit" class="btn btn-primary">Añadir</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
{{else ifCond user.Id_Rol '==' 2}}
<h2 class="text-center my-4">Acceso Denegado</h2>
<div class="container acceso-denegado">
    <p class="text-center">No tiene permisos para acceder a esta página.</p>
    <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-danger">Volver al Inicio</a>
    </div>
</div>
{{/ifCond}}